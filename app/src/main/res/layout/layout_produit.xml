<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/list_item_pizza.xml -->
<!-- res/layout/list_item_pizza.xml -->


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">


    <ImageView
        android:id="@+id/pizzaImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/pizzaNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de la pizza"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Autres détails de la pizza en haut à droite -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Image à gauche -->

            <!-- Texte à droite -->


            <TextView
                android:id="@+id/pizzaCompTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autre détail"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/btn_plus" />

        </LinearLayout>

        <!-- Image au milieu -->


        <!-- Image à côté de comp et duree -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">




            <!-- Image à côté de duree -->


            <!-- Texte pour duree -->
            <TextView
                android:id="@+id/dureeTextView"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="Durée"
                android:textSize="14sp" />



        </LinearLayout>

        <!-- Image à droite au milieu avec une flèche -->


    </LinearLayout>
</LinearLayout>
